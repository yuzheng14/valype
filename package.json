{
  "name": "valype-workspace",
  "version": "0.0.1",
  "author": "yuzheng14 <lyuchensy@foxmail.com>",
  "devDependencies": {
    "@eslint/css": "^0.8.1",
    "@eslint/js": "^9.28.0",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.5.0",
    "@types/bun": "^1.2.15",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/ui": "^3.2.3",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "tsdown": "^0.12.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "vitest": "^3.2.3"
  },
  "packageManager": "bun@1.2.2",
  "scripts": {
    "test": "echo '使用 vitest 运行单次测试及覆盖率' && vitest run --coverage",
    "test:watch": "echo '使用 vitest 运行监控模式' && vitest --coverage",
    "test:ui": "echo '使用 vitest 运行监控模式并通过 web 可视化' && vitest --coverage --ui",
    "build": "pnpm run -F \"*valype\" build",
    "playground": "pnpm run -F playground dev",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "type": "module",
  "workspaces": [
    "packages/*",
    "playground"
  ]
}
